<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
       <item name="tabBackground">@color/tab_bg_color</item>   <!-- 背景色-->
        <item name="tabIndicatorColor">@color/tab_selected_text_color</item>  <!-- 指示线的颜色-->
        <item name="tabIndicatorHeight">2dp</item>   <!-- 指示线的高度-->
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/tab_selected_text_color</item>  <!-- Tab选中的字体颜色-->

    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>  <!--Tab字体大小-->
        <item name="android:textColor">#000000</item>  <!--Tab字体未选中的颜色-->
        <item name="textAllCaps">true</item>
    </style>

</resources>
