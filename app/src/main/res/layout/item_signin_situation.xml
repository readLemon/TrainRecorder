<?xml version="1.0" encoding="utf-8"?>
<com.example.train.widget.SlideLayout
    android:id="@+id/sl_item_signin_situation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_time_fm_rv_item_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_situation_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_snowboarder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_situation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="我的名字"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/iv_item_situation_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_item_situation_avatar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cl_time_fm_rv_item_content"
        app:layout_constraintStart_toEndOf="@+id/cl_time_fm_rv_item_content"
        app:layout_constraintTop_toTopOf="@+id/cl_time_fm_rv_item_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_signin_sure"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#D7D7D7"
            android:textSize="16sp"
            android:gravity="center"
            android:text="签到"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_signin_absent"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#FF3A31"
            android:textSize="16sp"
            android:gravity="center"
            android:text="缺勤"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item_signin_sure" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.example.train.widget.SlideLayout>