<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGrey"
    android:layout_height="match_parent"
    tools:context=".activity.CheckAbsentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_sign_in"
        app:title="以下为缺训名单"
        app:titleTextColor="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/common_ic_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_04"
        android:textSize="20sp"
        android:layout_below="@+id/tb_sign_in"
        android:layout_marginStart="15dp"
        android:text="目前总共训练次数为: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_team_count"
        android:textSize="20sp"
        android:text="00"
        android:layout_below="@+id/tb_sign_in"
        android:layout_toEndOf="@+id/tv_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_04"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tv_04"
        android:layout_marginTop="10dp"
        android:id="@+id/rv_absent_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>