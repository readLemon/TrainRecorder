<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rv_item_project_notice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_rv_item_project_content"
            android:textSize="20sp"
            android:text="训练内容: "
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="@+id/tv_rv_item_project_notice"
            android:id="@+id/tv_rv_item_project_content"
            app:layout_constraintStart_toEndOf="@+id/tv_rv_item_project_notice"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:text="训练内容"
            android:layout_width="240dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rv_item_time_notice"
            app:layout_constraintTop_toBottomOf="@+id/tv_rv_item_project_notice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_rv_item_time_content"
            android:textSize="20sp"
            android:text="训练时间: "
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="@+id/tv_rv_item_time_notice"
            android:id="@+id/tv_rv_item_time_content"
            app:layout_constraintStart_toEndOf="@+id/tv_rv_item_time_notice"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:text="训练内容"
            android:layout_width="240dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rv_item_where_notice"
            app:layout_constraintTop_toBottomOf="@+id/tv_rv_item_time_notice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_rv_item_where_content"
            android:textSize="20sp"
            android:text="训练地点: "
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="@+id/tv_rv_item_where_notice"
            android:id="@+id/tv_rv_item_where_content"
            app:layout_constraintStart_toEndOf="@+id/tv_rv_item_where_notice"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:text="训练内容"
            android:layout_width="240dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>