<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/login_fragment_root_bg_color"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_main_fm_welcome"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:textSize="50sp"
        android:layout_marginTop="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_login_fragment_welcome"
        app:layout_constraintBottom_toTopOf="@+id/et_login_fm_username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/et_login_fm_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_main_fm_et_bg"
        android:drawableStart="@drawable/ic_login_fragment_user"
        android:textColor="@color/login_fragment_login_et_text_color"
        android:drawablePadding="14dp"
        android:hint="请输入您的密帐号"
        android:inputType="number"
        android:paddingStart="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_fm_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@drawable/ic_login_fragment_user"
        android:paddingLeft="10dp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/et_login_fm_psw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_login_fragment_lock"
        android:drawablePadding="14dp"
        android:textColor="@color/login_fragment_login_et_text_color"
        android:background="@drawable/shape_main_fm_et_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="10dp"
        android:hint="请输入您的密码"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_login_fm_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_login_fm_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:textColor="@color/login_fragment_login_btn_text_color"
        android:text="登录"
        android:background="@drawable/shape_main_fm_login_btn_bg"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@+id/et_login_fm_psw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>